<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sipariş Yönetimi - Admin Panel</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="admin-logo">
                <h1>Admin Panel</h1>
            </div>
            <ul class="admin-menu">
                <li>
                    <a href="/admin">
                        <i class="fas fa-home"></i>
                        Dashboard
                    </a>
                </li>
                <li>
                    <a href="/admin/products">
                        <i class="fas fa-box"></i>
                        Ürünler
                    </a>
                </li>
                <li>
                    <a href="/admin/orders" class="active">
                        <i class="fas fa-shopping-cart"></i>
                        Siparişler
                    </a>
                </li>
                <li>
                    <a href="/admin/users">
                        <i class="fas fa-users"></i>
                        Kullanıcılar
                    </a>
                </li>
                <li>
                    <a href="/admin/categories">
                        <i class="fas fa-tags"></i>
                        Kategoriler
                    </a>
                </li>
                <li>
                    <a href="/admin/settings">
                        <i class="fas fa-cog"></i>
                        Ayarlar
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="admin-main">
            <div class="admin-header">
                <h2>Sipariş Yönetimi</h2>
            </div>

            <!-- Filters -->
            <div class="admin-form" style="margin-bottom: 2rem;">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
                    <div class="form-group">
                        <label for="status">Durum</label>
                        <select class="form-control" id="status">
                            <option value="">Tüm Durumlar</option>
                            <option value="pending">Beklemede</option>
                            <option value="processing">İşleniyor</option>
                            <option value="shipped">Kargoda</option>
                            <option value="delivered">Teslim Edildi</option>
                            <option value="cancelled">İptal Edildi</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="date">Tarih Aralığı</label>
                        <input type="date" class="form-control" id="date">
                    </div>
                    <div class="form-group">
                        <label for="search">Arama</label>
                        <input type="text" class="form-control" id="search" placeholder="Sipariş no veya müşteri ara...">
                    </div>
                </div>
            </div>

            <!-- Orders Table -->
            <div class="admin-table">
                <table>
                    <thead>
                        <tr>
                            <th>Sipariş No</th>
                            <th>Müşteri</th>
                            <th>Tarih</th>
                            <th>Tutar</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#ORD-2024-001</td>
                            <td>
                                <div>
                                    <div style="font-weight: 500;">Ahmet Yılmaz</div>
                                    <div style="font-size: 0.875rem; color: var(--admin-text-light);">ahmet@email.com</div>
                                </div>
                            </td>
                            <td>15.03.2024</td>
                            <td>₺32,999</td>
                            <td><span class="status-badge status-pending">Beklemede</span></td>
                            <td>
                                <div style="display: flex; gap: 0.5rem;">
                                    <button class="admin-btn admin-btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="admin-btn admin-btn-success">
                                        <i class="fas fa-check"></i>
                                    </button>
                                    <button class="admin-btn admin-btn-danger">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>#ORD-2024-002</td>
                            <td>
                                <div>
                                    <div style="font-weight: 500;">Ayşe Demir</div>
                                    <div style="font-size: 0.875rem; color: var(--admin-text-light);">ayse@email.com</div>
                                </div>
                            </td>
                            <td>14.03.2024</td>
                            <td>₺24,999</td>
                            <td><span class="status-badge status-processing">İşleniyor</span></td>
                            <td>
                                <div style="display: flex; gap: 0.5rem;">
                                    <button class="admin-btn admin-btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="admin-btn admin-btn-success">
                                        <i class="fas fa-check"></i>
                                    </button>
                                    <button class="admin-btn admin-btn-danger">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>#ORD-2024-003</td>
                            <td>
                                <div>
                                    <div style="font-weight: 500;">Mehmet Kaya</div>
                                    <div style="font-size: 0.875rem; color: var(--admin-text-light);">mehmet@email.com</div>
                                </div>
                            </td>
                            <td>13.03.2024</td>
                            <td>₺42,999</td>
                            <td><span class="status-badge status-shipped">Kargoda</span></td>
                            <td>
                                <div style="display: flex; gap: 0.5rem;">
                                    <button class="admin-btn admin-btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="admin-btn admin-btn-success">
                                        <i class="fas fa-check"></i>
                                    </button>
                                    <button class="admin-btn admin-btn-danger">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div style="display: flex; justify-content: center; margin-top: 2rem; gap: 0.5rem;">
                <button class="admin-btn">Önceki</button>
                <button class="admin-btn admin-btn-primary">1</button>
                <button class="admin-btn">2</button>
                <button class="admin-btn">3</button>
                <button class="admin-btn">Sonraki</button>
            </div>
        </main>
    </div>

    <script>
        // Mobile sidebar toggle
        document.querySelector('.admin-menu').addEventListener('click', (e) => {
            if (window.innerWidth <= 768) {
                const sidebar = document.querySelector('.admin-sidebar');
                sidebar.classList.toggle('active');
            }
        });
    </script>
</body>
</html> 