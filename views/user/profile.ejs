<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Bilgilerim - Shopping</title>
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Custom Global CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Page Specific CSS -->
    <link rel="stylesheet" href="/css/user/profile.css">
</head>
<body>
    <%- include("../partials/header") %>

    <div class="user-page-container profile-container">
        <h2 class="user-page-title">Kullanıcı Bilgilerim</h2>
        
        <div class="row">
            <div class="col-md-8">
                <div class="user-card profile-section">
                    <div class="card-body">
                        <h3 class="user-card-title">Profil Bilgileri</h3>
                        <form action="/user/profile/update" method="POST">
                            <div class="form-group">
                                <label for="name" class="form-label">Ad Soyad</label>
                                <input type="text" class="form-control" id="name" name="name" required value="<%= typeof currentUser !== 'undefined' ? currentUser.name : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="email" class="form-label">E-posta</label>
                                <input type="email" class="form-control" id="email" name="email" required value="<%= typeof currentUser !== 'undefined' ? currentUser.email : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="phone" class="form-label">Telefon</label>
                                <input type="tel" class="form-control" id="phone" name="phone" value="<%= typeof currentUser !== 'undefined' ? currentUser.phone : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="address" class="form-label">Adres</label>
                                <textarea class="form-control" id="address" name="address" rows="3"><%= typeof currentUser !== 'undefined' ? currentUser.address : '' %></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary user-btn">Bilgileri Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="user-card password-section">
                    <div class="card-body">
                        <h3 class="user-card-title">Şifre Değiştir</h3>
                        <form action="/user/profile/change-password" method="POST">
                            <div class="form-group">
                                <label for="currentPassword" class="form-label">Mevcut Şifre</label>
                                <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                            </div>
                            <div class="form-group">
                                <label for="newPassword" class="form-label">Yeni Şifre</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                            </div>
                            <div class="form-group">
                                <label for="confirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                            </div>
                            <button type="submit" class="btn btn-primary user-btn">Şifreyi Değiştir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>
    <script src="/js/script.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
