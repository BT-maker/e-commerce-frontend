<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tüm Listelerim - Shopping</title>
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Custom Global CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Page Specific CSS -->
    <link rel="stylesheet" href="/css/user/lists.css">
</head>
<body>
    <%- include("../partials/header") %>

    <div class="user-page-container lists-container">
        <h2 class="user-page-title">Tüm Listelerim</h2>
        
        <div class="list-actions-bar">
            <button class="btn btn-primary user-btn create-list-btn" data-bs-toggle="modal" data-bs-target="#newListModal">
                <i class="fas fa-plus"></i> Yeni Liste Oluştur
            </button>
        </div>
        
        <div class="lists-grid">
            <!-- Listeler buraya gelecek -->
            <div class="list-item">
                <div class="card user-card list-card">
                    <div class="card-body">
                        <div class="list-header">
                            <h5 class="list-title">Liste Adı 1</h5>
                            <span class="list-date">Oluşturulma Tarihi: 01.01.2024</span>
                        </div>
                        <div class="list-info">
                            <p>Ürün Sayısı: 5</p>
                        </div>
                        <div class="list-actions">
                            <button class="btn btn-info btn-sm view-list">Listeyi Görüntüle</button>
                            <button class="btn btn-danger btn-sm delete-list">Sil</button>
                        </div>
                    </div>
                </div>
            </div>
             <div class="list-item">
                <div class="card user-card list-card">
                    <div class="card-body">
                        <div class="list-header">
                            <h5 class="list-title">Liste Adı 2</h5>
                            <span class="list-date">Oluşturulma Tarihi: 15.01.2024</span>
                        </div>
                        <div class="list-info">
                            <p>Ürün Sayısı: 10</p>
                        </div>
                        <div class="list-actions">
                            <button class="btn btn-info btn-sm view-list">Listeyi Görüntüle</button>
                            <button class="btn btn-danger btn-sm delete-list">Sil</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Eğer liste yoksa aşağıdaki satır gösterilir -->
            <!--
            <div class="empty-lists">
                <p>Henüz liste oluşturmadınız.</p>
            </div>
            -->
        </div>
    </div>

    <!-- Yeni Liste Oluşturma Modal -->
    <div class="modal fade" id="newListModal" tabindex="-1" aria-labelledby="newListModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newListModalLabel">Yeni Liste Oluştur</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/user/lists/create" method="POST">
                        <div class="form-group">
                            <label for="listName" class="form-label">Liste Adı</label>
                            <input type="text" class="form-control" id="listName" name="listName" required>
                        </div>
                        <div class="form-group">
                            <label for="listDescription" class="form-label">Açıklama</label>
                            <textarea class="form-control" id="listDescription" name="listDescription" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary user-btn">Liste Oluştur</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>
    <script src="/js/script.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
